{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ES2022", "DOM"],
    "module": "ES2022",
    "target": "ES2022",
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "**/.*.js",
    "**/.*.cjs",
    "**/.*.mjs",
    "**/.*.ts",
    "**/.*.cts",
    "**/.*.mts",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.ts",
    "**/*.cts",
    "**/*.mts",
    "**/*.jsx",
    "**/*.tsx",
    "**/*.vue"
  ],
  "exclude": ["**/node_modules", "**/dist"]
}
